<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.tvbarthel.apps.cameracolorpicker.activities.PaletteDetailActivity">

    <fr.tvbarthel.apps.cameracolorpicker.views.SquarePaletteView
        android:id="@+id/activity_palette_detail_preview_translating"
        android:layout_width="@dimen/row_color_palette_thumbnail_size"
        android:layout_height="@dimen/row_color_palette_thumbnail_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/row_color_palette_thumbnail_size_half"
        android:background="@drawable/shadow_square" />


    <fr.tvbarthel.apps.cameracolorpicker.views.PaletteView
        android:id="@+id/activity_palette_detail_preview_scaling"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_palette_detail_top_palette_height"
        android:visibility="invisible"
        tools:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_palette_detail_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_palette_detail_top_palette_height"
        android:visibility="invisible"
        tools:listitem="@layout/row_palette"
        tools:visibility="visible" />

    <View
        android:id="@+id/activity_palette_detail_list_view_shadow"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/activity_palette_detail_top_palette_height"
        android:background="@drawable/linear_gradient_bottom"
        android:visibility="invisible"
        tools:visibility="visible" />

</merge>